---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import { Picture } from "astro:assets";
import sidingImage from "assets/siding.jpg";
import Cta from "@components/cta.astro";

const reasons = [
    {
        reason: "Damage and Wear",
        description: "Over time, siding can become damaged due to weather, impacts, or general wear and tear. Cracks, warping, and peeling are signs that replacement might be needed.",
    },
    {
        reason: "Energy Efficiency",
        description: "Older or damaged siding can lead to drafts and increased energy bills. New siding can improve insulation and help reduce heating and cooling costs.",
    },
    {
        reason: "Aesthetic Appeal",
        description: "If your home’s exterior is outdated or no longer matches your style preferences, new siding can give your home a fresh, updated look.",
    },
    {
        reason: "Enhanced Protection",
        description: "Modern siding options offer improved protection against moisture, pests, and extreme weather conditions, helping to safeguard your home’s structure.",
    },
    {
        reason: "Increased Home Value",
        description: "New siding can boost your home’s curb appeal and market value, making it more attractive to potential buyers.",
    }
]

const offerings = [
    {
        name: "Vinyl Siding",
        overview: "Vinyl siding is a popular choice due to its affordability, low maintenance, and variety of colors and styles. It’s durable, resistant to moisture, and doesn’t require painting.",
        situation: "Homeowners seeking a cost-effective and versatile siding option with minimal upkeep."
    },
    {
        name: "Wood Siding",
        overview: "Wood siding provides a classic and natural look. Available in options like cedar or redwood, it offers excellent insulation but requires regular maintenance to prevent rot and damage.",
        situation: "Those looking for traditional charm and willing to invest time in maintenance."
    },
    {
        name: "Metal Siding",
        overview: "Metal siding, including aluminum and steel, is known for its durability and modern look. It’s resistant to fire and pests and can be low-maintenance.",
        situation: "Those looking for a sleek, industrial appearance with long-lasting performance."
    },
]
---
<!-- TODO: add img -->
<Layout title="Home Siding Services">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
        <div class="mt-16 text-center">
            <!-- left and right division for heading and image -->
            <div class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
                <div class="py-6 md:order-1 hidden md:block">
                    <Picture
                    src={sidingImage}
                    alt="Home Roofing"
                    widths={[200, 400, 600]}
                    sizes="(max-width: 800px) 100vw, 620px"
                    loading="eager"
                    format="avif"
                    />
                </div>

                <div>
            <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">Home Siding Services</h1>
            <p class="text-lg mt-4 text-slate-600 max-w-xl">At Northeast Roofing Solutions, we offer expert home siding services to enhance your home’s appearance, protection, and value. Siding plays a crucial role in safeguarding your home from the elements while providing a finished look. Here’s a brief overview of the types of siding we offer and the key reasons to consider replacing your existing siding.</p>
                </div>

                
            </div>
             <wbr/>

            <ul class="text-left">
            {
                offerings.map((item) => (
                    <li>
                        <h3 class="font-semibold text-lg">{item.name}</h3>{" "}
                        <ul>
                            <li>
                                <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">Overview:</span> {item.overview}
                            </li>
                            <li>
                                <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">Ideal for:</span> {item.situation}
                            </li>
                        </ul>
                    </li>
                    <wbr/>
                ))
            }
            </ul>

            <div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-16">
            {
                reasons.map((item) => (
                    <div class="flex gap-4 items-start">
                    <div>
                        <h3 class="font-semibold text-lg">{item.reason}</h3>{" "}
                        <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
                    </div>
                    </div>
                ))
            }
            </div>
            
        </div>
    </div>
  </Container>
  <Cta />
</Layout>
